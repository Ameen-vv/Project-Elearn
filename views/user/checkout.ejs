<%-include('../user/layout/user-head.ejs')%>
  <!-- Navbar -->

  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container wow fadeIn">

      <!-- Heading -->
      <h2 class="my-5 h2 text-center">Checkout form</h2>

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
            <form class="card-body" id="checkoutForm">


             

              <!--Grid row-->
              <div class="row">

                <!--Grid column-->
                <div class="col-lg-4 col-md-12 mb-4">

                  <label for="country">Country</label>
                  <select class="custom-select d-block w-100" id="country" required name="country">
                    <option value="">Choose...</option>
                    <option value="India">India</option>
                  </select>
                  <div class="invalid-feedback">
                    Please select a valid country.
                  </div>
                  <input type="text" name="userId" value="<%=userId%>" hidden>

                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-lg-4 col-md-6 mb-4">

                  <label for="state">State</label>
                  <select class="custom-select d-block w-100" id="state" required name="state">
                    <option value="">Choose...</option>
                    <option value="Kerala">Kerala</option>
                  </select>
                  <div class="invalid-feedback">
                    Please provide a valid state.
                  </div>

                </div>


              </div>
 

              <hr>




 
             <div class="col-md-12">
                <input type="radio" id="online" name="payment" value="online">
                <label for="online">Online Payment</label>
             </div>
             <!-- <div class="col-md-12">
                <input type="radio" id="cod" name="payment" value="cod">
                <label for="cod">cash on delivery</label>
             </div> -->
              </div>
              <hr class="mb-4">
              <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>

            </form>

            
          <!--/.Card-->

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-4">
            <div class="card mb-4">
              <div class="card-header py-3">
                <h5 class="mb-0">Summary</h5>
              </div>
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                    Products
                    <span>₹ <%=totalPrice%></span>
                  </li>
                  <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  GST 8%
                  <span>₹ <%=gstPrice%></span>
                </li>
                  <hr>
                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                    <div>
                      <strong>Total amount</strong>
                      <strong>
                        <!-- <p class="mb-0">(including GST 8%)</p> -->
                      </strong>
                    </div>
                    <span><strong>₹ <%=grandTotal%></strong></span>
                  </li>
                  <hr>
                </ul>
    
              
              </div>
            </div>
          </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      <!-- <form class="card p-2">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Promo code" aria-label="Recipient's username" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-secondary btn-md waves-effect m-0" type="button">Redeem</button>
          </div>
        </div>
      </form> -->
    </div>
  </main>
  <!--Main layout-->

  <!--Footer-->
  <%-include('./layout/user-foot.ejs')-%>