<%-include('./layout/user-head.ejs')-%>


    <section class="courses">
        <div class="w-100 container-fluid mt-2" style="background-color: #fefefe;">
            <div class="row">
                <!-- Card -->
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-3">
                <div class="card">

                    <!-- Card image -->
                    <img class="card-img-top" src="/assets/images/thumbnails/<%=product.imageUrl%>"
                        alt="Card image cap">

                    <!-- Card content -->
                    <div class="card-body">

                        <!-- Title -->
                        <h4 class="card-title">â‚¹<%=product.price%></h4>
                        <!-- Text -->
                        <p class="hours mb-3">Total duration: <%=product.hours%> hours</p>
                        <%if(product.users.includes(user)){%>
                            <a href="/playVideo/<%=product._id%>/0"><div class=""><button class=" button w-100" style="color:white ;" ><i class="fa fa-play"></i> Play</button></div></a> 
                        <%}
                        else{%>
                            <div class=""><button class=" button w-100" style="color:white ;" onclick="addToCart('<%=product._id%>')">Add to cart</button></div>
                            <div class="mt-3 buy-button mr-2"><a href="#" style="color:#ffffff ;">Buy now</a></div>
                            
                            <div class="mt-3"><button class="btn whishlist-button"  style="color:white ;" onclick="addToWhishlist('<%=product._id%>')"><i class="fa fa-heart"></i></button></div>
                        <%}%>
                        <!-- Button -->
                        
                        <!-- <div class="mt-3  "><a href="#" class="">Add to cart</a></div> -->

                    </div>

                </div>
            </div>


                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-9 p-3">
                    <div class="ml-3">                    
                        <h2 class="course-heading"><%=product.courseName%></h2>
                        <p class="">created by ameen</p>
                    </div>
                    <div class="tolearn  shadow-lg bg-white rounded mt-5">
                        <h3 class="tolearn-head mb-3 ml-4 mt-3">What you'll learn</h3>
                        <div class="tolearnlist ">
                           <%product.toLearn.forEach(function(tolearn){%>
                            <p class="tolearnlist-item ml-4">&#9642; <%= tolearn %></p> 
                            <%})%>
                                
                                
                            
                                   
                           
                            

                        </div>
                    </div>
                    <div class="description mt-5 ml-3">
                        <h4 class="tolearn-head">Description</h4>
                        <p class="description"><%=product.description%> </p>
                    </div>
                    <div class="description mt-5 ml-3">
                        <h4 class="tolearn-head">Requirements</h4>
                        <ul class="description mt-4">
                            <%product.requirements.forEach(function(req){%>
                                      <li class="mb-3">&#9642; <%=req%></li>
                                      
                            <%})%>
                        </ul>
                    </div>
                </div>


                    <!-- Card -->





            </div>
        </div>
    </section>





    <%-include('./layout/user-foot.ejs')-%>