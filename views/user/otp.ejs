<body>
  <header><nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="https://api.logo.com/api/v2/images?format=webp&logo=logo_d2df6ff8-6ccc-4b21-881c-f1070469b2c4&width=2000&quality=100&background=transparent&fit=contain&u=1668407304"  alt="" width="100" height="40">
      </a>
    </div>
  </nav>
  </header>
  <hr class="header-line">
<section class="sign-up-body">
  <div class="mask d-flex align-items-center gradient-custom-3" style="height:150vh;">
    <div class="container" style="height:100% ;">
      <div class="row d-flex justify-content-center align-items-center mt-5">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card sign-up-card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Enter OTP</h2>

              <form action="/verifyotp" method="post">

                <div class="form-outline mb-4">
                  <input type="number" id="form3Example3cg" class="form-control form-control-lg" name="otp" required/>
                  <label class="form-label" for="form3Example3cg">OTP</label>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Sign in</button>
                </div>
                <% if(otperr){%> 
                  <p class="" style="color:red ;">Incorrect otp</p>
                  <%} %>
              </form>
            <script>
                var timeleft = 30;
               var downloadTimer = setInterval(function(){
              timeleft--;
              document.getElementById("countdowntimer").textContent = timeleft;
              if(timeleft <= 0){
              clearInterval(downloadTimer);
              document.getElementById("countdowntimer").innerHTML='<input type="submit" id="resend-button" class="resend-otp"  value="resend" >'
              }
              },1000);
            </script>
              <form action="/resendotp" method="post">
            <div style="align-items:center ; width: 100%;">
                <p class="text-center text-muted mt-5 mb-0">Resend OTP  <span id="countdowntimer">30 </span> </p>
                
            </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
